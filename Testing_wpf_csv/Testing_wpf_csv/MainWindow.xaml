<Window x:Class="Testing_wpf_csv.MainWindow" ResizeMode="NoResize"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Testing_wpf_csv"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical" Margin="20">
        <TextBlock HorizontalAlignment="Center" FontSize="48"
                   FontFamily="Segoe UI Black">Excel Report Generator</TextBlock>
        <TextBlock x:Name="location_textblock"></TextBlock>
        <ListView x:Name="files_list"></ListView>
        <Button x:Name="new_location_btn" Click="New_location_btn_Click" 
                VerticalAlignment="Bottom">Select New Excel Files Location</Button>
        
        <Button x:Name="process_button" Click="Process_button_Click">Process</Button>



        
        <Button x:Name="copy_raw_data_button" Click="Copy_raw_data_button_Click">
            Copy Raw Data</Button>
        <Button x:Name="draw_graph_btn" Click="Draw_graph_btn_Click">Draw Graph on excel</Button>
    </StackPanel>
    
</Window>
